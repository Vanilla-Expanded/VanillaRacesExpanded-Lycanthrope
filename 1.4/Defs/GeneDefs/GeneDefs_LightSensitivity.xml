<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<GeneDef>
		<defName>VRE_LightSensitivity</defName>
		<label>light sensitivity</label>
		<description>Carriers of this gene have biological compounds in their eyes that react painfully to light photons. They are unusually sensitive to any light sources.</description>
		<iconPath>UI/Icons/Genes/Gene_LightSensitivity</iconPath>
		<displayOrderInCategory>500</displayOrderInCategory>
		<dislikesSunlight>true</dislikesSunlight>
		<displayCategory>ResistanceAndWeakness</displayCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>2</biostatMet>
		<exclusionTags>
			<li>VRE_LightSensitivity</li>
		</exclusionTags>
		 <conditionalStatAffecters>
      <li Class="VanillaGenesExpanded.ConditionalStatAffecter_AnyLightSensitivity">
        <statFactors>
          <MoveSpeed>0.9</MoveSpeed>
        </statFactors>
      </li>
    </conditionalStatAffecters>
	</GeneDef>
	
	<GeneDef>
		<defName>VRE_IntenseLightSensitivity</defName>
		<label>intense light sensitivity</label>
		<description>Carriers of this gene have biological compounds in their eyes that react dangerously to light photons. They are intensely sensitive to any light sources.</description>
		<iconPath>UI/Icons/Genes/Gene_LightSensitivityIntense</iconPath>
		<displayOrderInCategory>501</displayOrderInCategory>
		<dislikesSunlight>true</dislikesSunlight>
		<displayCategory>ResistanceAndWeakness</displayCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>3</biostatMet>
		<exclusionTags>
			<li>VRE_LightSensitivity</li>
		</exclusionTags>
		 <conditionalStatAffecters>
      <li Class="VanillaGenesExpanded.ConditionalStatAffecter_AnyLightSensitivity">
        <statFactors>
          <MoveSpeed>0.8</MoveSpeed>
        </statFactors>
      </li>
    </conditionalStatAffecters>
	</GeneDef>
	
</Defs>