<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<GeneDef>
		<defName>VRE_Territorial</defName>
		<label>territorial</label>
		<displayCategory>Mood</displayCategory>
		<description>Carriers of this gene are extremely territorial and will feel more calm in their own land, and at the same time increasingly uneasy as they leave it.</description>
		<iconPath>UI/Icons/Genes/Gene_Territorial</iconPath>
		<displayOrderInCategory>1000</displayOrderInCategory>
		<conditionalStatAffecters>
			<li Class="VanillaGenesExpanded.ConditionalStatAffecter_OutsideColonyMap">
				<statOffsets>
					<MentalBreakThreshold>0.20</MentalBreakThreshold>
				</statOffsets>
			</li>
			<li Class="VanillaGenesExpanded.ConditionalStatAffecter_InColonyMap">
				<statOffsets>
					<MentalBreakThreshold>-0.20</MentalBreakThreshold>
				</statOffsets>
			</li>
		</conditionalStatAffecters>
		<biostatCpx>1</biostatCpx>
		<biostatMet>1</biostatMet>
		
		
	</GeneDef>
	

</Defs>